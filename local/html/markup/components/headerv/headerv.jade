						img.logo__img.logo__img_main( width="89" height="89" src="%=static=%img/general/Bolshoi_logo.png", alt="Большой театр") 
				a.logo__link(href='https://www.abbyy.com/ru-ru/', rel="nofollow noopener", target="_blank")
						img.logo__img(src="%=static=%img/general/ABBYY_Logo.png", alt="ABBY")
